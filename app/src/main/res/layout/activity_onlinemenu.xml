<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400sp"
    android:background="@color/faded_grey"
    android:orientation="vertical"
    android:padding="12dp"
    android:gravity="center">

    <!-- Repeated LinearLayout 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:textSize="14sp"
            android:text="Side"
            android:gravity="center_vertical"
            android:textColor="@color/light_gray"
            android:paddingEnd="6dp"/>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40sp"
            android:background="@color/grey"
            android:entries="@array/side"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <!-- Repeated LinearLayout 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:textSize="14sp"
            android:text="Mode"
            android:gravity="center_vertical"
            android:textColor="@color/light_gray"
            android:paddingEnd="6dp"/>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40sp"
            android:background="@color/grey"
            android:entries="@array/Mode"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Time"
            android:textColor="@color/light_gray"
            android:background="@color/grey"
            android:textColorHint="@color/light_gray"
            android:padding="6dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Increment"
            android:background="@color/grey"
            android:textColor="@color/light_gray"
            android:textColorHint="@color/light_gray"
            android:padding="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/startGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/bright_blue"
            android:text="Start with random"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <!-- EditText for 'enter opponent username' -->
        <EditText
            android:id="@+id/opponentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter opponent username"
            android:textColor="@color/light_gray"
            android:textColorHint="@color/light_gray"
            android:padding="6dp"
            android:background="@color/grey"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAskToPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="@color/bright_blue"
            android:text="Ask To Play"
            android:textSize="14sp"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
